<!--this is the default layout for products/index.html.erb, set in index action of products_controller.rb-->
<!--still using assets/stylesheets/application.scss for styling-->
<!DOCTYPE html>
<html>
<head>

  <title>BeardStoreApp</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!--bootstrap core css (bs must be added first so the bs styles are applied over scss style)-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!--links to static_pages.scss, which is linked to application.scss-->

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!--links to app/assets/javascript/? jquery included in Rails-->

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <!--link to bootstrap js (bs js depends on jquery which is linked with the js link above.)-->

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--responsive mobile tag-->
	<%= csrf_meta_tags %>

</head>
<body>


	<header class="site-header">
		<ul class="head-nav">
		  <li><a href="default.asp">Home</a></li>
		  <li><a href="news.asp">News</a></li>
		  <li><a href="contact.asp">Contact</a></li>
		  <li><a href="about.asp">About</a></li>
		</ul>
    </header>

	<div class="page-wrap">
	  <div class="content">
	    <%= yield %>
	  </div>
	</div>

	<footer class="site-footer">
	  <p>&copy<small>BeardCo.</small></p>
	</footer>


</body>
</html>

