

<% @products.each do |product| %>
  <% cache product do %>
  <!--this cache plus render cache = russina doll caching-->
	  <div class="container col-sm-4 col-md-3 index-container">
	    <div class="row index-row">
	      <div class="index-wrap">
	        <div class="thumbnail">
	          <%= link_to image_tag(product.image_url), product_path(product) %>
	          <div class="index-caption">
	            <h3><%= product.name %></h3>
	            <p><%= product.description %></p>

	            <div class="index-bottom">  
	              <span class="label label-primary index-label"><%= product.price %>
	              </span>
	              <span class="index-extra"><%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
	                %>
	              </span>
	              <span class="index-extra"> / </span>
	              <span class="index-extra"><%= link_to 'Edit', edit_product_path(product) %>
	              </span>

	            </div>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
  <% end %>
<% end %>


