
<div class="col-sm-2 col-md-4">
  <h3><%= product.name %></h3>
  <%= image_tag(product.image_url, size: "80", class: "img-responsive") %>
  <p><%= product.description %></p>
  <strong><%= product.price %></strong>
  <%= link_to 'Show', product %>
  <%= link_to 'Edit', edit_product_path(product) %>
